{
  "name": "srustamov/tt",
  "description": "php simple and fastest mini mvc framework",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Samir Rustamov",
      "email": "rustemovv96@gmail.com",
      "homepage": "https://github.com/srustamov",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.2.0",
    "windwalker/edge": "~3.0",
    "phpmailer/phpmailer": "^6.0",
    "predis/predis": "^1.1",
    "filp/whoops": "^2.4",
    "lcobucci/jwt": "^3.3"
  },
  "config": {
    "optimize-autoloader": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "System\\": "system/"
    },
    "files":[
      "system/Engine/helpers.php"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "post-root-package-install": [
      "php -r \"file_exists('.config') || copy('.config.example', '.config');\""
    ],
    "post-create-project-cmd": ["php manage key:generate"]
  },
  "require-dev": {
    "symfony/var-dumper": "^4.3"
  }
}
