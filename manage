#!/usr/bin/env php
<?php
//-----------------------------------------------------
/**
 * @author  Samir Rustamov <rustemovv96@gmail.com>
 */
//------------------------------------------------------

use System\Engine\Kernel;
use System\Engine\Cli\Console;
use System\Engine\Cli\PrintConsole;

//------------------------------------------
// Define set application started time
//------------------------------------------
define('APP_START', microtime(true));


//------------------------------------------
// Load Composer Autoload file
//------------------------------------------
require __DIR__.'/vendor/autoload.php';



//------------------------------------------
// Application Bootstrapping
//------------------------------------------
$TT = new System\Engine\Kernel(__DIR__);

$TT->bootstrap();



//------------------------------------------
// Application $argv parameters execute
//------------------------------------------
Console::run($argv);



//------------------------------------------
// Console command execute benchmark message
//------------------------------------------
$message = PrintConsole::benchmark(microtime(true));

exit($message);
